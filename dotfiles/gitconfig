[include]
    path = ~/.gitconfig_local

[core]
    editor = code --wait
    excludesfile = ~/.gitignore

[diff]
    tool = vscode

[merge]
    tool = vscode

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[mergetool "vscode"]
    cmd = code -wait $MERGED